{
  "name": "ode",
  "version": "1.0.0",
  "description": "Ode - OpenCode chat controller for Slack",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "daemon": "nodemon",
    "typecheck": "tsc --noEmit",
    "postinstall": "mkdir -p node_modules/@opencode-ai && ln -sf $(realpath ../opencode/packages/sdk/js) node_modules/@opencode-ai/sdk"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.5",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "@slack/socket-mode": "^2.0.5",
    "@slack/web-api": "^7.13.0",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.5"
  }
}
