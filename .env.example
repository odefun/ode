SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Optional: comma-separated channel IDs to restrict bot to
# SLACK_TARGET_CHANNELS=C12345,C67890

# Agent selection
# CODING_AGENT=claude
CODING_AGENT=opencode

# Working directory
# Supports ~ expansion
DEFAULT_CWD=/root

# OAuth callback server port
OAUTH_CALLBACK_PORT=3000

# Logging
LOG_LEVEL=info

# OpenCode server
OPENCODE_SERVER_URL=http://127.0.0.1:4096

# Ode Action API (Slack + future IM actions)
ODE_ACTION_API_URL=http://127.0.0.1:3030
# ODE_ACTION_API_TOKEN=your-secret
